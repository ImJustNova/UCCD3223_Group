<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="341dp"
        android:layout_marginTop="38dp"
        android:text="cancel"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Title"
        android:textSize="25sp" />

    <!-- Goal fields -->
    <EditText
        android:id="@+id/goalName"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/pageTitle"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Goal Name"
        android:inputType="text"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:textSize="14sp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/targetAmount"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/goalName"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Target Amount"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Budget fields -->
    <EditText
        android:id="@+id/budgetLimit"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/goalName"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Budget Limit"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:layout_below="@+id/budgetLimit"
        android:spinnerMode="dropdown"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/timeFrame"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:layout_below="@+id/category"
        android:spinnerMode="dropdown"
        android:visibility="gone"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="623sp"
        android:layout_marginBottom="57sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:background="@drawable/round_button_background"
        android:padding="16dp"
        android:text="add goal"
        android:textColor="@android:color/white" />

</RelativeLayout>
